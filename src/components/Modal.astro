---
interface Props {
  open: boolean;
  children: any;
}
const { open, children } = Astro.props;
---
{open && (
  <div id="modal-container" class="fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-lg p-8 relative">
      <button
        type="button"
        id="modal-close-btn"
        class="absolute top-2 right-2 text-gray-400 hover:text-gray-600"
        aria-label="Cerrar modal"
      >
        &times;
      </button>
      {children}
    </div>
  </div>
)}

<script>
  const modalContainer = document.querySelector('#modal-container');
  const closeButton = document.querySelector('#modal-close-btn');

  if (modalContainer && closeButton) {
    const handleClose = () => {
      modalContainer.remove();
    };

    closeButton.addEventListener('click', handleClose);

    modalContainer.addEventListener('click', (e) => {
      if (e.target === modalContainer) {
        handleClose();
      }
    });
  }
</script>