---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { user, stats, recentActivity, upcomingQuizzes, badges } from '../const/dashboard.const';
---

<BaseLayout 
  title="Dashboard | QuizMaster" 
  description="Visualiza tu progreso, estad√≠sticas y logros en Quiz Master"
  className="bg-gradient-to-br from-navi/95 via-navi/80 to-navi/90"
  fullWidth={true}
>
  <div class="flex-1 w-full">
    <div class="container mx-auto px-4 py-8">
    <!-- Header with Welcome -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
      <div>
        <h1 class="text-3xl md:text-4xl font-bold text-White mb-2">Hola, {user.name} üëã</h1>
        <p class="text-White/80">Aqu√≠ est√° tu resumen de hoy</p>
      </div>
      <div class="mt-4 md:mt-0 flex items-center space-x-4">
        <div class="relative">
          <div class="w-12 h-12 rounded-full bg-gradient-to-br from-Orange to-Accent p-0.5">
            <img 
              src={user.avatar} 
              alt={user.name} 
              class="w-full h-full rounded-full object-cover border-2 border-navi"
            />
          </div>
          <span class="absolute -bottom-1 -right-1 bg-Blue text-White text-xs font-bold rounded-full w-6 h-6 flex items-center justify-center border-2 border-navi">
            {user.level}
          </span>
        </div>
      </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      {
        stats.map((stat, index) => {
          const width = `${70 + (index * 10)}%`;
          return (
            <div class="bg-navi/50 backdrop-blur-sm rounded-xl p-6 border border-white/10 hover:bg-navi/60 transition-colors">
              <div class="flex items-center justify-between">
                <p class="text-White/70 text-sm font-medium">{stat.name}</p>
                <span class={`text-xs px-2 py-1 rounded-full ${stat.changeType === 'increase' ? 'bg-green-500/20 text-green-400' : 'bg-Orange/20 text-Orange'}`}>
                  {stat.change}
                </span>
              </div>
              <p class="mt-2 text-2xl font-bold text-White">{stat.value}</p>
              <div class="mt-3 w-full bg-navi/30 rounded-full h-1.5">
                <div 
                  class={`h-full rounded-full ${index % 2 === 0 ? 'bg-gradient-to-r from-Orange to-Accent' : 'bg-Blue'}`}
                  style={`width: ${width}`}
                ></div>
              </div>
            </div>
          );
        })
      }
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Left Column - Progress & Quick Actions -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Progress Card -->
        <div class="bg-navi/50 backdrop-blur-sm rounded-2xl p-6 border border-white/10">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-bold text-White">Tu Progreso</h2>
            <span class="text-sm text-Orange font-medium">Nivel {user.level}</span>
          </div>
          
          <div class="mb-4">
            <div class="flex justify-between text-sm text-White/70 mb-1">
              <span>XP: {user.xp}/{user.nextLevelXp}</span>
              <span>{user.xpPercentage}%</span>
            </div>
            <div class="w-full bg-navi/30 rounded-full h-2.5">
              <div 
                class="h-full rounded-full bg-gradient-to-r from-Orange to-Accent"
                style={{ width: `${user.xpPercentage}%` }}
              ></div>
            </div>
          </div>
          
          <div class="grid grid-cols-2 gap-4 mt-6">
            <div class="bg-navi/30 p-4 rounded-xl border border-white/5">
              <p class="text-White/70 text-sm">Racha Actual</p>
              <p class="text-2xl font-bold text-White">5 d√≠as</p>
              <p class="text-xs text-White/50 mt-1">+2 d√≠as esta semana</p>
            </div>
            <div class="bg-navi/30 p-4 rounded-xl border border-white/5">
              <p class="text-White/70 text-sm">Puntos de Experiencia</p>
              <p class="text-2xl font-bold text-White">{user.xp} XP</p>
              <p class="text-xs text-White/50 mt-1">+120 XP esta semana</p>
            </div>
          </div>
        </div>

        <!-- Recent Activity -->
        <div class="bg-navi/50 backdrop-blur-sm rounded-2xl p-6 border border-white/10">
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-bold text-White">Actividad Reciente</h2>
            <a href="/activity" class="text-sm text-Orange hover:underline">Ver todo</a>
          </div>
          
          <div class="space-y-4">
            {
              recentActivity.map(activity => {
                return (
                  <div class="flex items-start p-3 rounded-lg hover:bg-navi/40 transition-colors group">
                    <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-gradient-to-br from-Orange/20 to-Accent/20 flex items-center justify-center text-xl mr-4">
                      {activity.icon}
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-White truncate">{activity.title}</p>
                      <p class="text-xs text-White/60 mt-1">
                        {activity.type === 'quiz' && `Puntuaci√≥n: ${activity.score} ‚Ä¢ ${activity.category}`}
                        {activity.type === 'badge' && activity.description}
                        {activity.type === 'course' && `Progreso: ${activity.progress}% ‚Ä¢ ${activity.category}`}
                        {activity.type === 'challenge' && activity.result}
                      </p>
                    </div>
                    <span class="text-xs text-White/50 ml-2">{activity.date}</span>
                  </div>
                );
              })
            }
          </div>
        </div>
      </div>

      <!-- Right Column - Upcoming Quizzes & Badges -->
      <div class="space-y-8">
        <!-- Upcoming Quizzes -->
        <div class="bg-navi/50 backdrop-blur-sm rounded-2xl p-6 border border-white/10">
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-bold text-White">Pr√≥ximos Cuestionarios</h2>
            <a href="/quizzes" class="text-sm text-Orange hover:underline">Ver todos</a>
          </div>
          
          <div class="space-y-4">
            {
              upcomingQuizzes.map(quiz => {
                const difficultyClass = 
                  quiz.difficulty === 'Baja' ? 'bg-green-500/20 text-green-400' :
                  quiz.difficulty === 'Media' ? 'bg-Orange/20 text-Orange' :
                  'bg-red-500/20 text-red-400';
                
                return (
                  <div class="p-4 rounded-xl border border-white/5 hover:bg-navi/40 transition-colors">
                    <div class="flex justify-between items-start">
                      <div>
                        <h3 class="font-medium text-White">{quiz.title}</h3>
                        <p class="text-xs text-White/50 mt-1">{quiz.category} ‚Ä¢ {quiz.questions} preguntas ‚Ä¢ {quiz.time}</p>
                      </div>
                      <span class={`text-xs px-2 py-1 rounded-full ${difficultyClass}`}>
                        {quiz.difficulty}
                      </span>
                    </div>
                    <div class="mt-3 flex items-center justify-between">
                      <span class="text-xs text-White/60">{quiz.date}</span>
                      <button class="text-xs bg-gradient-to-r from-Orange to-Accent text-White px-3 py-1.5 rounded-lg hover:opacity-90 transition-opacity">
                        Comenzar
                      </button>
                    </div>
                  </div>
                );
              })
            }
          </div>
          
          <button class="mt-4 w-full py-2.5 border border-dashed border-White/20 text-White/70 rounded-lg hover:bg-White/5 transition-colors text-sm font-medium flex items-center justify-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Crear Cuestionario Personalizado
          </button>
        </div>

        {/* Badges */}
        <div class="bg-navi/50 backdrop-blur-sm rounded-2xl p-6 border border-white/10">
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-bold text-White">Logros</h2>
            <span class="text-sm text-White/60">{badges.filter(b => b.earned).length}/{badges.length}</span>
          </div>
          
          <div class="grid grid-cols-2 gap-4">
            {
              badges.map(badge => {
                const badgeClass = badge.earned 
                  ? 'bg-gradient-to-br from-Orange/10 to-Accent/10 border border-Orange/20' 
                  : 'bg-navi/30 border border-white/5 opacity-50';
                
                const iconClass = badge.earned 
                  ? 'bg-gradient-to-br from-Orange to-Accent' 
                  : 'bg-navi/50';
                
                const titleClass = badge.earned ? 'text-White' : 'text-White/60';
                
                return (
                  <div class={`p-3 rounded-xl text-center ${badgeClass}`}>
                    <div class={`w-12 h-12 mx-auto rounded-full ${iconClass} flex items-center justify-center text-2xl mb-2`}>
                      {badge.icon}
                    </div>
                    <h3 class={`text-sm font-medium ${titleClass}`}>
                      {badge.name}
                    </h3>
                    <p class="text-xs text-White/50 mt-1 line-clamp-2">
                      {badge.description}
                    </p>
                  </div>
                );
              })
            }
          </div>
          
          <a href="/achievements" class="mt-4 inline-block w-full text-center text-sm text-Orange hover:underline">
            Ver todos los logros
          </a>
        </div>
      </div>
    </div>

    {/* Quick Stats */}
    <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-gradient-to-br from-Orange/10 to-Accent/10 border border-Orange/20 rounded-2xl p-6">
        <div class="flex items-center">
          <div class="p-3 rounded-xl bg-Orange/20 text-Orange mr-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <div>
            <p class="text-sm text-White/70">Tiempo Total de Estudio</p>
            <p class="text-xl font-bold text-White">24h 36m</p>
            <p class="text-xs text-White/50">+2h 15m esta semana</p>
          </div>
        </div>
      </div>
      
      <div class="bg-gradient-to-br from-Blue/10 to-LightBlue/10 border border-Blue/20 rounded-2xl p-6">
        <div class="flex items-center">
          <div class="p-3 rounded-xl bg-Blue/20 text-Blue mr-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <div>
            <p class="text-sm text-White/70">Cuestionarios Completados</p>
            <p class="text-xl font-bold text-White">24</p>
            <p class="text-xs text-White/50">+5 esta semana</p>
          </div>
        </div>
      </div>
      
      <div class="bg-gradient-to-br from-green-500/10 to-green-400/10 border border-green-500/20 rounded-2xl p-6">
        <div class="flex items-center">
          <div class="p-3 rounded-xl bg-green-500/20 text-green-400 mr-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="text-sm text-White/70">Tasa de Aciertos</p>
            <p class="text-xl font-bold text-White">87%</p>
            <p class="text-xs text-White/50">+3% desde la semana pasada</p>
          </div>
        </div>
      </div>
    </div>
    
    {/* CTA Section */}
    <div class="mt-12 p-8 rounded-2xl bg-gradient-to-r from-Orange/10 to-Accent/10 border border-Orange/20 text-center">
      <h2 class="text-2xl font-bold text-White mb-3">¬øListo para un nuevo desaf√≠o?</h2>
      <p class="text-White/80 max-w-2xl mx-auto mb-6">
        Descubre nuevos cuestionarios y mejora tus habilidades. ¬°Sigue tu progreso y alcanza nuevos niveles de conocimiento!
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a 
          href="/quizzes" 
          class="px-6 py-3 bg-gradient-to-r from-Orange to-Accent text-White font-medium rounded-lg hover:opacity-90 transition-opacity"
        >
          Explorar Cuestionarios
        </a>
        <a 
          href="/courses" 
          class="px-6 py-3 bg-navi/50 border border-white/10 text-White font-medium rounded-lg hover:bg-navi/60 transition-colors"
        >
          Ver Cursos
        </a>
      </div>
    </div>
    </div>
  </div>
</BaseLayout>
