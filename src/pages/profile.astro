---
import BaseLayout from '../layouts/BaseLayout.astro';
import { isAuthenticated, user } from '../const/profile.const';
---

<BaseLayout 
  title="Perfil | QuizMaster"
  description="Gestiona tu perfil de QuizMaster, revisa tu progreso y personaliza tu cuenta."
  className="bg-gradient-to-br from-navi/95 via-navi/80 to-navi/90"
>
  <main class="min-h-[calc(100vh-200px)] flex items-center justify-center p-4">
    <div class="w-full max-w-4xl">
      {isAuthenticated ? (
        <!-- Perfil del usuario autenticado -->
        <div class="bg-navi/50 backdrop-blur-sm rounded-2xl shadow-xl border border-white/10 overflow-hidden">
          <!-- Encabezado del perfil -->
          <div class="bg-gradient-to-r from-Blue to-LightBlue p-6 md:p-8 text-center">
            <div class="w-24 h-24 mx-auto mb-4 rounded-full border-4 border-white/20 overflow-hidden">
              <img 
                src={user.avatar} 
                alt={`Foto de perfil de ${user.name}`}
                class="w-full h-full object-cover"
              />
            </div>
            <h1 class="text-2xl md:text-3xl font-bold text-White">{user.name}</h1>
            <p class="text-White/90">{user.email}</p>
            <p class="text-White/70 text-sm mt-1">Miembro desde {user.joinedDate}</p>
          </div>
          
          <!-- Contenido principal del perfil -->
          <div class="grid md:grid-cols-3 gap-6 p-6 md:p-8">
            <!-- Sección de estadísticas -->
            <div class="md:col-span-2 space-y-6">
              <div class="bg-navi/30 rounded-xl p-6 border border-white/5">
                <h2 class="text-xl font-semibold text-White mb-4">Estadísticas de Aprendizaje</h2>
                
                <div class="grid grid-cols-2 gap-4 mb-6">
                  <div class="bg-navi/40 rounded-lg p-4 text-center border border-white/5">
                    <p class="text-3xl font-bold text-Orange">{user.quizzesCompleted}</p>
                    <p class="text-White/70 text-sm">Cuestionarios completados</p>
                  </div>
                  <div class="bg-navi/40 rounded-lg p-4 text-center border border-white/5">
                    <p class="text-3xl font-bold text-Green-400">{user.averageScore}%</p>
                    <p class="text-White/70 text-sm">Puntuación promedio</p>
                  </div>
                </div>
                
                <div class="space-y-3">
                  <div>
                    <div class="flex justify-between text-sm text-White/80 mb-1">
                      <span>Progreso general</span>
                      <span>75%</span>
                    </div>
                    <div class="w-full bg-navi/30 rounded-full h-2.5">
                      <div class="bg-gradient-to-r from-Blue to-LightBlue h-2.5 rounded-full" style="width: 75%"></div>
                    </div>
                  </div>
                  
                  <div>
                    <div class="flex justify-between text-sm text-White/80 mb-1">
                      <span>Nivel actual</span>
                      <span>Avanzado</span>
                    </div>
                    <div class="w-full bg-navi/30 rounded-full h-2.5">
                      <div class="bg-gradient-to-r from-Orange to-Accent h-2.5 rounded-full" style="width: 65%"></div>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="bg-navi/30 rounded-xl p-6 border border-white/5">
                <h2 class="text-xl font-semibold text-White mb-4">Actividad Reciente</h2>
                <div class="space-y-4">
                  {[1, 2, 3].map(item => (
                    <div class="flex items-start space-x-3 p-3 bg-navi/40 rounded-lg border border-white/5">
                      <div class="flex-shrink-0 w-10 h-10 rounded-full bg-Blue/20 flex items-center justify-center">
                        <svg class="w-5 h-5 text-Blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                      </div>
                      <div>
                        <p class="text-White/90 font-medium">Cuestionario completado: Fundamentos de JavaScript</p>
                        <p class="text-White/50 text-sm">Hace 2 días • 85% de aciertos</p>
                      </div>
                    </div>
                  ))}
                  <a href="/history" class="block text-center text-Blue hover:text-LightBlue text-sm font-medium mt-2">
                    Ver todo el historial de actividad →
                  </a>
                </div>
              </div>
            </div>
            
            <!-- Barra lateral de acciones -->
            <div class="space-y-6">
              <div class="bg-navi/30 rounded-xl p-6 border border-white/5">
                <h2 class="text-lg font-semibold text-White mb-4">Acciones</h2>
                <div class="space-y-3">
                  <a 
                    href="/settings" 
                    class="flex items-center space-x-2 px-4 py-3 bg-navi/50 hover:bg-navi/70 rounded-lg text-White/90 hover:text-White transition-colors border border-white/5"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span>Configuración de la cuenta</span>
                  </a>
                  
                  <a 
                    href="/subscription" 
                    class="flex items-center space-x-2 px-4 py-3 bg-navi/50 hover:bg-navi/70 rounded-lg text-White/90 hover:text-White transition-colors border border-white/5"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                    </svg>
                    <span>Suscripción Premium</span>
                  </a>
                  
                  <a 
                    href="/achievements" 
                    class="flex items-center space-x-2 px-4 py-3 bg-navi/50 hover:bg-navi/70 rounded-lg text-White/90 hover:text-White transition-colors border border-white/5"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                    </svg>
                    <span>Logros y medallas</span>
                  </a>
                  
                  <button class="w-full flex items-center space-x-2 px-4 py-3 bg-navi/50 hover:bg-navi/70 rounded-lg text-White/90 hover:text-White transition-colors border border-white/5 text-left">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                    </svg>
                    <span>Cerrar sesión</span>
                  </button>
                </div>
              </div>
              
              <div class="bg-navi/30 rounded-xl p-6 border border-white/5">
                <h2 class="text-lg font-semibold text-White mb-3">Insignias</h2>
                <div class="grid grid-cols-3 gap-3">
                  {[1, 2, 3, 4, 5, 6].map(badge => (
                    <div class="relative group">
                      <div class="w-full aspect-square rounded-full bg-navi/50 flex items-center justify-center text-White/30">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                        </svg>
                      </div>
                      <div class="absolute bottom-0 left-1/2 -translate-x-1/2 translate-y-1/2 w-5 h-5 bg-Orange rounded-full flex items-center justify-center text-white text-xs font-bold">
                        {badge}
                      </div>
                    </div>
                  ))}
                </div>
                <a href="/achievements" class="block text-center text-Blue hover:text-LightBlue text-sm font-medium mt-4">
                  Ver todas las insignias →
                </a>
              </div>
            </div>
          </div>
        </div>
      ) : (
        <!-- Estado no autenticado -->
        <div class="bg-navi/50 backdrop-blur-sm rounded-2xl shadow-xl border border-white/10 overflow-hidden w-full max-w-md">
          <div class="bg-gradient-to-r from-Orange to-Accent p-6 md:p-8 text-center">
            <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-white/10 flex items-center justify-center">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <h1 class="text-2xl font-bold text-White">Acceso requerido</h1>
            <p class="text-White/90 mt-2">Inicia sesión para ver tu perfil y estadísticas de aprendizaje.</p>
          </div>
          
          <div class="p-6 md:p-8">
            <div class="space-y-4">
              <a 
                href="/login" 
                class="block w-full text-center py-3 px-4 rounded-lg font-medium text-white bg-gradient-to-r from-Orange to-Accent hover:from-Orange/90 hover:to-Accent/90 transition-all duration-200"
              >
                Iniciar sesión
              </a>
              <p class="text-center text-sm text-White/70">
                ¿No tienes una cuenta?{' '}
                <a href="/register" class="text-Blue hover:text-LightBlue font-medium">
                  Regístrate
                </a>
              </p>
            </div>
            
            <div class="mt-8 pt-6 border-t border-white/10">
              <a 
                href="/" 
                class="flex items-center justify-center text-White/70 hover:text-White transition-colors text-sm"
              >
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Volver al inicio
              </a>
            </div>
          </div>
        </div>
      )}
    </div>
  </main>
</BaseLayout>
