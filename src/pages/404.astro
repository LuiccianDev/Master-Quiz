---
import BaseLayout from '../layouts/BaseLayout.astro';

const randomIllustration = Math.floor(Math.random() * 3) + 1; // Random number between 1-3
---

<BaseLayout 
  title="404: No encontrado | QuizMaster" 
  description="Página no encontrada"
  className="bg-gradient-to-br from-navi/95 via-navi/80 to-navi/90"
>
  <div class="min-h-[calc(100vh-200px)] flex items-center justify-center p-6">
    <div class="w-full max-w-4xl">
      <div class="bg-navi/50 backdrop-blur-sm rounded-2xl shadow-xl border border-white/10 overflow-hidden">
        <div class="p-8 md:p-12 text-center">
          <!-- Decorative illustration -->
          <div class="max-w-md mx-auto mb-8">
            {randomIllustration === 1 && (
              <div class="relative">
                <div class="w-48 h-48 mx-auto bg-gradient-to-br from-Orange/20 to-Accent/20 rounded-full flex items-center justify-center">
                  <svg class="w-32 h-32 text-Orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="absolute -top-4 -right-4 w-12 h-12 bg-Blue/30 rounded-full flex items-center justify-center text-Blue">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
              </div>
            )}
            {randomIllustration === 2 && (
              <div class="relative">
                <div class="w-48 h-48 mx-auto bg-gradient-to-br from-Blue/20 to-LightBlue/20 rounded-full flex items-center justify-center">
                  <svg class="w-32 h-32 text-Blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                  </svg>
                </div>
                <div class="absolute -top-2 -right-2 w-10 h-10 bg-Orange/30 rounded-full flex items-center justify-center text-Orange">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                  </svg>
                </div>
              </div>
            )}
            {randomIllustration === 3 && (
              <div class="relative">
                <div class="w-48 h-48 mx-auto bg-gradient-to-br from-Accent/20 to-Orange/20 rounded-full flex items-center justify-center">
                  <svg class="w-32 h-32 text-Accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="absolute -top-3 right-0 w-12 h-12 bg-Blue/30 rounded-full flex items-center justify-center text-Blue">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                  </svg>
                </div>
              </div>
            )}
          </div>
          
          <!-- Error content -->
          <h1 class="text-6xl md:text-8xl font-bold bg-gradient-to-r from-Orange to-Accent bg-clip-text text-transparent">404</h1>
          <h2 class="text-2xl md:text-4xl font-bold text-White mt-4">¡Ups! Página no encontrada</h2>
          <p class="text-White/80 mt-3 max-w-2xl mx-auto">
            La página que estás buscando no existe, ha sido eliminada o ha cambiado de ubicación.
          </p>
          
          <!-- Search bar -->
          <div class="mt-8 max-w-md mx-auto relative">
            <div class="relative">
              <input 
                type="text" 
                placeholder="Buscar en QuizMaster..." 
                class="w-full pl-12 pr-6 py-4 bg-navi/30 border border-white/10 rounded-xl text-White placeholder-White/50 focus:outline-none focus:ring-2 focus:ring-Orange/50 focus:border-transparent transition-all duration-200"
              >
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-Orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
              </div>
              <button class="absolute inset-y-0 right-0 px-6 bg-gradient-to-r from-Orange to-Accent text-white font-medium rounded-r-xl hover:opacity-90 transition-opacity">
                Buscar
              </button>
            </div>
          </div>
          
          <!-- Quick links -->
          <div class="mt-10">
            <p class="text-White/70 mb-4">O vuelve a una de estas páginas:</p>
            <div class="flex flex-wrap justify-center gap-4">
              <a 
                href="/" 
                class="px-6 py-3 bg-navi/30 hover:bg-navi/40 border border-white/10 rounded-lg text-White font-medium transition-colors flex items-center"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                Inicio
              </a>
              <a 
                href="/courses" 
                class="px-6 py-3 bg-navi/30 hover:bg-navi/40 border border-white/10 rounded-lg text-White font-medium transition-colors flex items-center"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.478 3 6.253v13C4.168 18.497 5.754 18 7.5 18s3.332.497 4.5 1.253m0-13C13.168 5.478 14.754 5 16.5 5c1.747 0 3.332.478 4.5 1.253v13c-1.168-.756-2.753-1.253-4.5-1.253-1.746 0-3.332.497-4.5 1.253" />
                </svg>
                Cursos
              </a>
              <a 
                href="/quiz" 
                class="px-6 py-3 bg-navi/30 hover:bg-navi/40 border border-white/10 rounded-lg text-White font-medium transition-colors flex items-center"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Cuestionarios
              </a>
            </div>
          </div>
          
          <!-- Contact support -->
          <div class="mt-12 pt-8 border-t border-white/10">
            <p class="text-White/70">¿Necesitas ayuda? <a href="/contact" class="text-Orange hover:text-Accent font-medium transition-colors">Contáctanos</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
